{
  "compilerOptions": {
    
    
    "allowJs": true,
    "module": "commonjs",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "sourceMap": true,
    "baseUrl": ".",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "target": "ES6",
    "outDir": "dist",
    "rootDir": "./src",
    "strict": true,
    "paths": {
      "*": ["node_modules/*"]
    },
    "jsx": "react-jsx",
    // "strict":false
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
